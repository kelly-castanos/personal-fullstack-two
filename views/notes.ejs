<!doctype html>
<html>

<head>
  <title>Work Post-its</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3" id="divNotesMain">

      <div class="col-sm-6" id="divNotes">
        <section class="secNotesMain">

          <section class="secCreateNote">

            <h2>Write it down!</h2>
            <button><a href="/logout" style="text-decoration: none;" class="btn btn-default btn-sm">Logout</a></button>

            <% if (user.local.email) { %>
            <form action="/messages" method="POST" class="formNote">
              <label for="todayDate">Today's Date:</label>
              <input type="date" id="todayDate" name="date">
              <label for="noteTitle">Title:</label>
              <input type="text" id="noteTitle" name="noteTitle">
              <label for="note">Note:</label>
              <input type="text" placeholder="note" name="msg" class="writtenNote">
              <input type="text" style="display: none;" value="<%= user.local.email %>" name="email" class="userEmail">
              <button type="submit">Submit</button>
            </form>
          </section>
        </section>
      </div>
      <% } %>
    </div>
    <section class="secNotes">
      <!-- <h3>Notes</h3> -->
      <!-- <span><%=messages%></span> -->

      <ul class="messages ulMessages">
        <% for(var i=0; i<messages.length; i++) {%>

        <li class="message liItems" data-noteId='<%= messages[i]._id %>'>

          <span>Date: <%= new Date(messages[i].date).toISOString().split('T')[0] %></span><br>
          <span>Title: <%= messages[i].title%></span><br>
          <span>Note: <%= messages[i].msg %></span><br>

          <section class="secIcons">
            <span><i class="fa fa-edit"></i></span>

            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </section>
        </li>
        <% } %>
      </ul>
    </section>
  </div>
  <script type="text/javascript" src="main.js"></script>
</body>

</html>